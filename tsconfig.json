{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"verbatimModuleSyntax": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"moduleResolution": "Bundler",
		"module": "ESNext",
		"noEmit": true,
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"baseUrl": "."
	},
	"include": ["src/**/*", "package.json"]
}
